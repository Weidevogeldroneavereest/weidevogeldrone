<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <title>NFC Scan Logger</title>
</head>
<body>
  <h2>Scan geregistreerd</h2>
  <form id="logForm">
    <label>Naam of apparaatnaam:<br>
      <input type="text" id="deviceName" required>
    </label><br><br>
    <button type="submit">Verstuur gegevens</button>
  </form>
  <p id="status"></p>

  <script>
    document.getElementById('logForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const deviceName = document.getElementById('deviceName').value;
      const timestamp = new Date().toISOString();

      let lat = '', lon = '';

      // Locatie ophalen met toestemming
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(async function(position) {
          lat = position.coords.latitude;
          lon = position.coords.longitude;

          await sendToSheet(deviceName, timestamp, lat, lon);
        }, function() {
          document.getElementById('status').textContent = 'Locatie niet beschikbaar';
        });
      } else {
        document.getElementById('status').textContent = 'Geolocatie wordt niet ondersteund';
      }
    });

    async function sendToSheet(name, time, latitude, longitude) {
      const url = 'https://script.google.com/macros/s/AKfycbywFONw7VpHncoTg6pU6s93ffySvePSXT0uJNCP_M8/dev';
      const data = {
        naam: name,
        tijd: time,
        locatie: `(${latitude}, ${longitude})`
      };

      try {
        const response = await fetch(url, {
          method: 'POST',
          mode: 'no-cors',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        document.getElementById('status').textContent = 'Gegevens verstuurd!';
      } catch (error) {
        document.getElementById('status').textContent = 'Fout bij versturen';
      }
    }
  </script>
</body>
</html>
